<div class="main">
         <div class="header">
            <div class="menu-mobile">
               <label for="nav-mobile-input">
                  <i class="fa-solid fa-bars"></i>
               </label>
            </div>

            <div class="user-avatar">
               <div class="user-img-container">
                  <img src="https://demo.dashboardpack.com/cryptocurrency-html/img/transfer/4.png" alt=""
                     class="user-img">
               </div>
               <div class="user-info">
                  <p class="user-name">User Name</p>
                  <p class="user-role">User Role</p>
               </div>

               <div class="user-function">
                  <a href="" class="function-item">Log Out</a>
               </div>
            </div>
         </div>

         <div class="content">
            <div class="grid">
               <p class="page-title">Danh sách hoá đơn</p>
               <div class="table-list-container">
                  <div class="row filter-row-mobile">
                     <div class="col l-8 m-12 c-12">
                        <div class="filter-container">
                           <a href="#" class="filter-link"><span class="filter-box">Tất cả hoá đơn</span></a>
                           <a href="#" class="filter-link"><span class="filter-box">Đã thanh toán</span></a>
                           <a href="#" class="filter-link"><span class="filter-box">Chưa thanh toán</span></a>
                        </div>
                     </div>

                     <div class="col l-4 m-12 c-12">
                        <div class="search-bar">
                           <i class="search-icon fas fa-search"></i>
                           <input class="search-input" type="text" placeholder="seaching here">
                        </div>
                     </div>
                  </div>

                  <div class="table-container">
                     <table class="data-table">
                        <tr>
                           {{!-- <th scope="col">Mã đơn đặt</th> --}}
                           <th scope="col">Tên khách hàng</th>
                           <th scope="col">Số điện thoại</th>
                           <th scope="col">Phòng</th>
                           <th scope="col">Ngày nhận phòng</th>
                           <th scope="col">Ngày trả phòng</th>
                           <th scope="col"></th>
                           
                        </tr>

                        {{#each customers}}
                        <tr>
                           {{!-- <td>{{this._id}}</td> --}}
                           <td>{{this.c_name}}</td>
                           <td>{{this.c_phone}}</td>
                           <td>{{this.roomID.r_name}} </td>
                           <td>{{this.c_checkin}}</td>
                           <td>{{this.c_checkout}}</td>
                           <td class="td-btn">
                                <a href="/admin/bill/{{this._id}}">
                                    <span  class="status-btn">Xem chi tiết</span>        
                                </a>
                           </td>                                                    
                        </tr>
                        {{/each}}

                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>

