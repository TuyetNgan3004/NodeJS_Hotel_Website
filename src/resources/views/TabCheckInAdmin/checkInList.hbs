<div class="main">
   <div class="header">
      <div class="menu-mobile">
         <label for="nav-mobile-input">
            <i class="fa-solid fa-bars"></i>
         </label>
      </div>

      <div class="user-avatar">
         <div class="user-img-container">
            <img src="https://demo.dashboardpack.com/cryptocurrency-html/img/transfer/4.png" alt="" class="user-img">
         </div>
         <div class="user-info">
            <p class="user-name">User Name</p>
            <p class="user-role">User Role</p>
         </div>

         <div class="user-function">
            <a href="" class="function-item">Log Out</a>
         </div>
      </div>
   </div>

   <div class="content">
      <div class="grid">
         <p class="page-title">Danh sách check-in</p>
         <div class="table-list-container">
            <div class="row filter-row-mobile">
               <div class="col l-8 m-12 c-12">
                  {{!-- <div class="filter-container">
                     <a href="/admin/bookingRoom" class="filter-link"><span class="filter-box">Tất cả đơn</span></a>
                     <a href="/admin/bookingRoom/query/confirm" class="filter-link"><span class="filter-box">Chưa xác
                           nhận</span></a>
                     <a href="/admin/bookingRoom/query/confirmed" class="filter-link"><span class="filter-box">Đã xác
                           nhận</span></a>
                  </div> --}}
               </div>

               <div class="col l-4 m-12 c-12">
                   <div class="search-bar">
                     <i class="search-icon fas fa-search"></i>
                     <input id="myInputAdmin" class="search-input" type="text" name="input-search" placeholder="Nhập tìm kiếm...">
                  </div>
               </div>
            </div>

            <div class="table-container">
               <table class="data-table">
                  <tr>
                     {{!-- <th scope="col">Mã đơn đặt</th> --}}
                     <th scope="col">Tên khách hàng</th>
                     <th scope="col">Số điện thoại</th>
                     <th scope="col">Phòng</th>
                     <th scope="col">Ngày nhận phòng</th>
                     <th scope="col">Ngày trả phòng</th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                  </tr>

                  {{#each customers}}
                  <tbody id="myTable">
                     <tr>
                     {{!-- <td>{{this._id}}</td> --}}
                     <td>{{this.c_name}}</td>
                     <td>{{this.c_phone}}</td>
                     <td>{{this.roomID.r_name}} </td>
                     <td>{{this.c_checkin}}</td>
                     <td>{{this.c_checkout}}</td>
                     <td class="td-btn">
                        <a href="">
                           <span class="status-btn">Xem hoá đơn</span>
                        </a>
                     </td>
                     <td class="td-btn">
                        <a href="">
                           <span class="status-btn">Chi tiết đơn</span>
                        </a>
                     </td>
                  </tr>
                  </tbody>
                  {{/each}}

               </table>
            </div>
         </div>
      </div>
   </div>
</div