<div class="main">
   <div class="header">
      <div class="menu-mobile">
         <label for="nav-mobile-input">
            <i class="fa-solid fa-bars"></i>
         </label>
      </div>

      <div class="user-avatar">
         <div class="user-img-container">
            <img src="https://demo.dashboardpack.com/cryptocurrency-html/img/transfer/4.png" alt="" class="user-img">
         </div>
         <div class="user-info">
            <p class="user-name">User Name</p>
            <p class="user-role">User Role</p>
         </div>

         <div class="user-function">
            <a href="" class="function-item">Log Out</a>
         </div>
      </div>
   </div>

   <div class="content">
      <div class="grid">
         <p class="page-title">Phiếu checkin</p>
         <div class="table-list-container">

            <form action="">
               <div class="row">
                  <div class="col l-4 m-4 c-12">
                     <label for="room-img" class="form-label">Tên khách hàng</label>
                     <input id="room-img" type="text" class="form-input" placeholder="Nhập tên khách hàng">
                  </div>

                  <div class="col l-4 m-4 c-12">
                     <label for="room-type" class="form-label">Số điện thoại</label>
                     <input id="room-type" type="text" class="form-input" placeholder="Nhập số điện thoại">
                  </div>

                  <div class="col l-4 m-4 c-12">
                     <label for="room-people" class="form-label">Email</label>
                     <input id="room-people" type="text" class="form-input" placeholder="Nhập Email">
                  </div>
               </div>

               <div class="row">
                  <div class="col l-6 m-6 c-12">
                     <label for="room-img" class="form-label">Ngày nhận phòng</label>
                     <input id="room-img" type="datetime-local" class="form-input" placeholder="Nhập ngày nhận phòng">
                  </div>

                  <div class="col l-6 m-6 c-12">
                     <label for="room-type" class="form-label">Ngày trả phòng</label>
                     <input id="room-type" type="datetime-local" class="form-input" placeholder="Nhập ngày trả phòng">
                  </div>
               </div>

               <div class="row">
                  <div class="col l-4 m-4 c-12">
                     <label for="room-img" class="form-label">Số phòng</label>
                     <input id="room-img" type="text" class="form-input" placeholder="Nhập số phòng">
                  </div>

                  <div class="col l-4 m-4 c-12">
                     <label for="room-type" class="form-label">Tên phòng</label>
                     <input id="room-type" type="text" class="form-input" placeholder="Nhập tên phòng">
                  </div>

                  <div class="col l-4 m-4 c-12">
                     <label for="room-people" class="form-label">Giá phòng</label>
                     <input id="room-people" type="text" class="form-input" placeholder="Nhập giá phòng">
                  </div>
               </div>

