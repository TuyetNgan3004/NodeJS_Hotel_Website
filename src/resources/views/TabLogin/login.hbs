<!-- Start main -->
<main class="main-section">
   <!-- Start Slider -->
   <div class="slider-area slider-height2">
      <div class="slider-slogan-container">
         <div class="slider-slogan">
            <span class="slider-slogan-text">
               Đăng nhập
            </span>
         </div>
      </div>
   </div>
   <!-- End Slider -->

   <!-- Start content -->
   <div class="content-section">
      <div class="login-area">
         <div class="grid wide">
            <div class="row">
               <div class="col l-8 l-o-2 m-12 c-12">
                  <form class="form" action="/login" method="POST">
                     <h3 class="form-heading">Đăng nhập nhân viên</h3>
                     <p class="form-desc">Form đăng nhập dành cho nhân viên của Parallel Shine</p>
                     {{#if message}}
                     <div style="text-align: center" class="form-desc alert alert-{{message.type}}">
                        <strong>{{message.intro}}</strong> {{message.message}}
                     </div>
                     {{/if}}
                     <div class="form-group">
                        <label for="username" class="form-label">Tên đăng nhập</label>
                        <input id="username" type="text" class="form-input" placeholder="hoten@id" name="s_email" required>
                        <span class="form-msg">Vui lòng nhập trường này</span>
                     </div>

                     <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input id="password" type="password" class="form-input" placeholder="matkhau123" name="s_password" required>
                        <span class="form-msg">Vui lòng nhập trường này</span>
                     </div>
                     <button class="login-btn btn-reverse btn--size-md btn--size-full">Đăng nhập</button>
                  </form>
               </div>
            </div>


         </div>
      </div>
   </div>

   <!-- End content -->
</main>
<!-- End main -->