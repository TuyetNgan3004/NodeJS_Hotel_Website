 <!-- Start main -->
      <main class="main-section">
         <!-- Start Slider -->
         <div class="slider-area slider-height2">
            <div class="slider-slogan-container">
               <div class="slider-slogan">
                  <span class="slider-slogan-text">
                     Chi tiết phòng
                  </span>
               </div>
            </div>
         </div>

      <!-- Start Content -->

      <div class="content-section">
         <div class="content-container">
            <div class="grid">      
                <div class="room-detail">
                    <div class="room-detail-pic col-12">
                        <div class="main-pic">
                            <img src="{{rooms.r_img}}" alt="">
                        </div>
                        <div class="sub-pic">
                            <img src="{{rooms.r_img}}" alt="">
                            <img src="{{rooms.r_img}}" alt="">
                            <img src="{{rooms.r_img}}" alt="">
                        </div>
                    </div>
                    <div class="booking-room col-12">
                         <div class="date-checkin">
                           <div class="input-with-icon-container col-12">                            
                                 <input class="search-bar-input" type="datetime-local" name="input-search"
                                    placeholder="Ngày nhận phòng">
                                    <i class="check-in-icon fa-solid fa-calendar"></i>                           
                           </div>
                        </div>
                        <div class="date-checkin">
                           <div class="input-with-icon-container col-12">
                              <input type="datetime-local" class="search-bar-input" placeholder="Ngày trả phòng">
                              <i class="check-in-icon fa-solid fa-calendar"></i>
                           </div>
                        </div>
                        
                        <div class="room-detail-btn">
                           <a class="btn btn--size-s--black" href="">ĐẶT PHÒNG NGAY</a>
                        </div>
                    </div>
                </div>
                <div class="room-detail-description">
                    <p class="room-detail-description-name">{{rooms.r_name}}</p>
                    <p class="room-detail-description-price">{{rooms.r_price}}</p>
                    <p class="room-detail-description-content">{{rooms.r_desc}}</p>
                    <p class="room-detail-description-note">Số người ở: {{rooms.r_people}}</p>
                    <p class="room-detail-description-note">Số giường đôi: {{rooms.r_bed}} </p>
                    <p class="room-detail-description-note">Tiện ích: {{rooms.r_utilities}} </p>
                </div>
            </div>
         </div>

      </div>

      <!-- End Content -->

      </main>
      <!-- End main -->
